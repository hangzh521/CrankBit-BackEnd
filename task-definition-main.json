{
    "family": "crankbit-task-definition-main",
    "requiresCompatibilities": ["FARGATE"],
    "networkMode": "awsvpc",
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::349498089405:role/ecsTaskExecutionRole",

    "containerDefinitions": [
      { 
        "name": "crankbit-dev",
        "image": "349498089405.dkr.ecr.ap-southeast-2.amazonaws.com/crankbit-main:${COMMIT_HASH}",
        "cpu": 1024,
        "memory": 2048,
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-region" : "ap-southeast-2",
              "awslogs-group" : var.crankbit_logs_group_name,
              "awslogs-stream-prefix" : "ecs"
           }
        },
        "portMappings": [{
            "containerPort": 8080,
            "hostPort": 8080,
            "protocol": "tcp"
        }]
      }
   ]
}
  
